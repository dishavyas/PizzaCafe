    private void b4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_b4ActionPerformed
        // TODO add your handling code here:
        String custname,pizzatype = null;
        int quantity,rate,costoftopping,amount;
        custname=tf1.getText();
        quantity=Integer.parseInt(tf2.getText());
        rate=Integer.parseInt(tf3.getText());
        costoftopping=Integer.parseInt(tf4.getText());
        amount=Integer.parseInt(tf5.getText());
        if(rb1.isSelected())
        {
            pizzatype= "regular";
            
        }
        if (rb2.isSelected())
        {
            pizzatype="pen";
        }
        String topping = null;
        if(cb1.isSelected())
           topping="Cheese";
        if(cb2.isSelected())
            topping="Tomato";
        if(cb3.isSelected())
            topping="Capsicum";
       
      
       
       try 
        {
        Class.forName("com.mysql.jdbc.Driver");
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/dk","root","root");
        Statement st = con.createStatement();
        st.executeUpdate("insert into pizzacafe values ('"+custname+"', "+quantity+", "+rate+", "+costoftopping+", "+amount+",'"+pizzatype+"','"+topping+"')");
       
        JOptionPane.showMessageDialog(null,"Record is saved");
        
            
        }
        catch(Exception E)
        {
            System.out.println(E);
        }
    }//GEN-LAST:event_b4ActionPerformed

